<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="iaia.content">

    <configlet
        title="User Default Setup"
        action_id="iaia.content.browser.UserDefault"
        appId="iaia.content"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@UserDefaultControlPanel"
        icon_expr="string:/favicon.ico"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>
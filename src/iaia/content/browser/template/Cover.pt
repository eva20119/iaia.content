<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="plone">
<body>

<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">
     

    <div tal:define="mediaList python:view.get_media()"
         tal:repeat="media mediaList">
        <p tal:content="media/Title" ></p>
        <p tal:content="media/Description"></p>
        <div tal:define="film python:media.getObject()"
             tal:content="structure film/youtube"></div>
    </div> 
    

    <div tal:define="images python:['cover_image1','cover_image2','cover_image3',
                    'cover_image4','cover_image5']">
        <img tal:repeat="image images"
            tal:attributes="src string:${context/absolute_url}/@@images/${image}">
    </div>
    
    <div tal:define="news_items python:view.get_news_item()"
         tal:repeat="news news_items">
         <p tal:content="news/Title"></p>
         <p tal:content="news/Description"></p>
    </div>

    <div tal:define="documentList python:view.get_document()"
         tal:repeat="documents documentList">
        
        <div tal:define="doc  python:documents.getObject()">
            <p tal:content="doc/title"></p>
            <img tal:condition="nocall:doc/image"
                 tal:attributes="src string:${documents/getURL}/@@images/image" />
        </div>
    </div>
</metal:content-core>
</metal:content-core>

</body>
</html>
